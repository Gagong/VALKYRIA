      "css": [
        "CSS/style.css"
      ],
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": ["JavaScripts/Background/Background.js"]
  },

  "web_accessible_resources": [
    "JavaScripts/Injectables/*"
  ],

  "options_ui": {
    "page": "html/settings.html",
    "open_in_tab": false
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]
